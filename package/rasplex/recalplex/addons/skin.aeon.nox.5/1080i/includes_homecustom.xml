    <control type="group">
      <visible>[Control.HasFocus(300) | Control.HasFocus(9027)]</visible>
      <control type="multiimage">
        <visible>String.IsEqual(Container(300).ListItem.Label,Recalbox)</visible>
        <include>FanartCommonValues</include>
        <imagepath>/storage/.recalplex/slideshow/</imagepath>
      </control>
    </control>
  </include>
  <include name="Home_CustomItems">
    <item>
      <description>Recalbox</description>
      <label>Recalbox</label>
      <onclick>Plex.RunScript(/storage/.recalplex/autoboot_switch.py)</onclick>
    </item>
  </include>
</includes>
